type
  TfrmGrillaPlanPago = class(TfrmDialogoGenerico)
    dbgrd1: TDBGrid;
    lblFecha: TLabel;
    lblTarjeta: TLabel;
    lblArancel: TLabel;
    edtArancel: TEdit;
    dsqryDinamico: TDataSource;
    cbb1: TComboBox;
    lbl4: TLabel;
    dbtxtFECHA_ACTUALIZACION: TDBText;
    imgEliminar: TImage;
    imgAgregar: TImage;
    procedure FormShow(Sender: TObject);
    procedure cbb1Change(Sender: TObject);
