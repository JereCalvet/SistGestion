type
  TfrmMenuPrincipal = class(TfrmPlantillaGenerica)
    actmgrPermisos: TActionManager;
    actmmb1: TActionMainMenuBar;
    actUsuarios: TAction;
    actGrupos: TAction;
    actOpciones: TAction;
    actOpc_Grup: TAction;
    actGrup_Usu: TAction;
